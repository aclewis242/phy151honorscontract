    "import numpy as np\n",
    "import matplotlib.pyplot as plt\n",
    "from mpl_toolkits.mplot3d import Axes3D\n",
    "from matplotlib import cm\n",
    "import matplotlib.ticker as mticker\n",
    "import math\n",
    "import sys\n",
    "\n",
    "%matplotlib qt\n",
    "\n",
    "def dist(p1, p2): # Calculates the distance between two points in three-dimensional space.\n",
    "    return math.sqrt((p1[0]-p2[0]) ** 2 + (p1[1]-p2[1]) ** 2 + (p1[2]-p2[2]) ** 2)+0.00000000001\n",
    "\n",
    "def rgbToHex(r, g, b): # Takes a given series of numbers and converts them to a hexadecimal string.\n",
    "    rStr = str(hex(r))[2:]\n",
    "    if len(rStr) == 1:\n",
    "        rStr = \"0\" + rStr\n",
    "    gStr = str(hex(g))[2:]\n",
    "    if len(gStr) == 1:\n",
    "        gStr = \"0\" + gStr\n",
    "    bStr = str(hex(b))[2:]\n",
    "    if len(bStr) == 1:\n",
    "        bStr = \"0\" + bStr\n",
    "    return \"#\" + rStr + gStr + bStr\n",
    "\n",
    "def set_axes_equal(ax): # SOURCED FROM THE INTERNET\n",
    "    # This sort of thing ought to be built into Python automatically, so I elected to use a method already written by someone else to accomplish this rather than waste time figuring it out myself\n",
    "    x_limits = ax.get_xlim3d()\n",
    "    y_limits = ax.get_ylim3d()\n",
    "    z_limits = ax.get_zlim3d()\n",
    "    x_range = abs(x_limits[1] - x_limits[0])\n",
    "    x_middle = np.mean(x_limits)\n",
    "    y_range = abs(y_limits[1] - y_limits[0])\n",
    "    y_middle = np.mean(y_limits)\n",
    "    z_range = abs(z_limits[1] - z_limits[0])\n",
    "    z_middle = np.mean(z_limits)\n",
    "    plot_radius = 0.5*max([x_range, y_range, z_range])\n",
    "    ax.set_xlim3d([x_middle - plot_radius, x_middle + plot_radius])\n",
    "    ax.set_ylim3d([y_middle - plot_radius, y_middle + plot_radius])\n",
    "    ax.set_zlim3d([z_middle - plot_radius, z_middle + plot_radius])\n",
    "\n",
    "class potVal: # Class for points on the graph, storing x-y-z coordinate data, the index of its equipotential surface (if any), and its potential value from the points around it.\n",
    "    def __init__(self, x, y, z):\n",
    "        self.x = x\n",
    "        self.y = y\n",
    "        self.z = z\n",
    "        totPot = 0\n",
    "        for n in range(0, len(charges)):\n",
    "            totPot += ((8.98e9)*(charges[n]))/(distOfUnit*dist([posX[n],posY[n],posZ[n]],[x,y,z]))\n",
    "        self.val = totPot\n",
    "        self.eqLine = -1\n",
    "\n",
    "# LOAD FROM FILE - Asks the user if they wish to load data from a save file.\n",
    "loadYN = input(\"(Y/N) Would you like to load a distribution from a file? (Leave blank for no.)\").lower()\n",
    "if loadYN == \"yes\" or loadYN == \"y\":\n",
    "    loadYN = True\n",
    "else:\n",
    "    loadYN = False\n",
    "\n",
    "# Initial variable declarations\n",
    "xValsP = []\n",
    "yValsP = []\n",
    "zValsP = []\n",
    "xValsP2d = []\n",
    "yValsP2d = []\n",
    "voltVals = []\n",
    "neg = False\n",
    "pos = False\n",
    "saveYN = False\n",
    "numCharges = \"\"\n",
    "if loadYN: # Save file parsing code\n",
    "    fileName = input(\"Please enter the name of the file you would like to load from. (Leave blank for the default, save.)\")\n",
    "    if fileName == \"\":\n",
    "        fileName = \"save.dat\"\n",
    "    if fileName.find(\".\") == -1:\n",
    "        fileName += \".dat\"\n",
    "    fileName = fileName.replace(\" \", \"_\")\n",
    "    with open(fileName, 'r') as f:\n",
    "        numSurfs = int(f.readline())\n",
    "        if int(f.readline()) == 1:\n",
    "            voltVals.append(\"\")\n",
    "            pos = True\n",
    "        if int(f.readline()) == 1:\n",
    "            neg = True\n",
    "        numSurfsTemp = numSurfs\n",
    "        if pos and neg:\n",
    "            numSurfsTemp *= 2\n",
    "        numCharges = int(f.readline())\n",
    "        for n in range(0, numSurfsTemp):\n",
    "            xValsP.append([])\n",
    "            yValsP.append([])\n",
    "            zValsP.append([])\n",
    "            xValsP2d.append([])\n",
    "            yValsP2d.append([])\n",
    "            voltVals.append(\"\")\n",
    "        for line in f:\n",
    "            if line[0] == \"#\":\n",
    "                x = float(line[1:line.index(\"x\")])\n",
    "                y = float(line[line.index(\"x\") + 1:line.index(\"y\")])\n",
    "                z = float(line[line.index(\"y\") + 1:line.index(\"z\")])\n",
    "                v = line[line.index(\"z\") + 1:line.index(\"v\")]\n",
    "                n = int(line[line.index(\"v\") + 1:])\n",
    "                if float(v) < 0:\n",
    "                    neg = True\n",
    "                else:\n",
    "                    pos = True\n",
    "                ind = n\n",
    "                if pos:\n",
    "                    ind -= 1\n",
    "                xValsP[ind].append(x)\n",
    "                yValsP[ind].append(y)\n",
    "                zValsP[ind].append(z)\n",
    "                xValsP2d[ind].append(x)\n",
    "                yValsP2d[ind].append(y)\n",
    "                voltVals[n] = v\n",
    "else:\n",
    "    # NUMBER OF CHARGES - Defines the number of charged objects to consider.\n",
    "    numCharges = input(\"How many charges would you like to model? (Leave blank for the default, which is 1.)\")\n",
    "    if numCharges == \"\":\n",
    "        numCharges = 1\n",
    "    else:\n",
    "        numCharges = int(numCharges)\n",
    "\n",
    "    # CHARGE VALUES - Defines the charge values in C for each charged object.\n",
    "    chargesUnscaled = []\n",
    "    charges = []\n",
    "    manualChargeInput = input(\"(Y/N) Would you like to manually enter the charge value(s)? (Enter 1 for a charge of 1.6e-19 C.) (Enter N for the default, which is all electrons.)\").lower()\n",
    "    if manualChargeInput == \"yes\" or manualChargeInput == \"y\":\n",
    "        for n in range(0, numCharges):\n",
    "            c = input(\"Please enter the value for charge \" + str(n+1) + \".\")\n",
    "            chargesUnscaled.append(int(c))\n",
    "    else:\n",
    "        for n in range(0, numCharges):\n",
    "            chargesUnscaled.append(-1)\n",
    "    for c in chargesUnscaled:\n",
    "        charges.append(c*1.6e-19)\n",
    "        if c < 0:\n",
    "            neg = True\n",
    "        else:\n",
    "            pos = True\n",
    "    \n",
    "    # SCALE - Defines physical length of the axes.\n",
    "    scale = 1\n",
    "    axisLength = scale * 1.4e-9 * 1.15\n",
    "    if not (neg and pos):\n",
    "        axisLength *= numCharges\n",
    "\n",
    "    # CHARGE POSITIONS - Defines the x-y-z coordinate values for each charge.\n",
    "    posX = []\n",
    "    posY = []\n",
    "    posZ = []\n",
    "    distOfUnit = (axisLength*(math.log10(numCharges) + 1))/100 # (100*(math.log10(numCharges) + 1))\n",
    "    for n in range(0,len(charges)):\n",
    "        posStr = input((\"Please enter the coordinates for charge \" + str(n+1) + \" with charge \" + str(charges[n]) + \". Coordinates range from -100 to 100.\")).strip(\"() \").split(\",\")\n",
    "        posX.append(int(posStr[0]))\n",
    "        posY.append(int(posStr[1]))\n",
    "        posZ.append(int(posStr[2]))\n",
    "\n",
    "    # NUMBER OF EQUIPOTENTIAL SURFACES - Defines the number of equipotential surfaces to be used.\n",
    "    numSurfs = 10 # This can be changed, but it is highly recommended that 10 be used, as it is the number the code was designed around\n",
    "    eqDiff = scale\n",
    "    eqDiffArr = []\n",
    "    eqDiffRange = []\n",
    "    if neg:\n",
    "        for n in range(-int(numSurfs/(eqDiff/scale)), 0):\n",
    "            eqDiffArr.append(n*eqDiff)\n",
    "    if pos:\n",
    "        for n in range(1, int(numSurfs/(eqDiff/scale)) + 1):\n",
    "            eqDiffArr.append(n*eqDiff)\n",
    "\n",
    "    # SAVE TO FILE - Saves the generated distribution to a file. (Actual code doing this is later.)\n",
    "    saveYN = input(\"(Y/N) Would you like to save this distribution to a file? (Leave blank for no.)\").lower()\n",
    "    fileName = \"\"\n",
    "    if saveYN == \"y\" or saveYN == \"yes\":\n",
    "        saveYN = True\n",
    "        fileName = input(\"Please enter the name of the file you would like to save to. (Leave blank for the default, save.)\")\n",
    "        if fileName == \"\":\n",
    "            fileName = \"save.dat\"\n",
    "        if fileName.find(\".\") == -1:\n",
    "            fileName += \".dat\"\n",
    "        fileName = fileName.replace(\" \", \"_\")\n",
    "    else:\n",
    "        saveYN = False\n",
    "\n",
    "    potVals = []\n",
    "    accuracy = 1 # Beware increasing this value much. Even just 2 makes it take significantly longer, but the results are only marginally better at best, so it's not really worth increasing.\n",
    "    progress = \"\\rRunning...⠀[\" + \" \"*25 + \"]\"\n",
    "    # factor = int(100*accuracy*(math.log10(numCharges) + 1))\n",
    "    factor = int(100*accuracy)\n",
    "    for x in range(-factor, factor): # This series of nested for loops creates a potVal object for each point and adds it to an array. The bulk of the calculations happen here.\n",
    "        sys.stdout.write(\"\\r\" + progress)\n",
    "        for y in range(-factor, factor):\n",
    "            pVold = potVal(0, 0, 0)\n",
    "            pVold.val = 0\n",
    "            for z in range(-factor, factor):\n",
    "                pV = potVal(x/accuracy, y/accuracy, z/accuracy)\n",
    "                for n in eqDiffArr:\n",
    "                    if (n < pV.val and n > pVold.val) or (n > pV.val and n < pVold.val):\n",
    "                        pV.eqLine = int(n/eqDiff)\n",
    "                        potVals.append(pV)\n",
    "                pVold = pV\n",
    "        if (x + 100) % ((2*100)/25) == 0:\n",
    "            progress = progress.replace(\" \", \"█\", 1)\n",
    "    print(\"\\nDone!\\nGenerating graph...\")\n",
    "\n",
    "    # Initial unparsed point array declarations\n",
    "    xVals = []\n",
    "    yVals = []\n",
    "    zVals = []\n",
    "    xVals2d = []\n",
    "    yVals2d = []\n",
    "    if pos:\n",
    "        eqDiffArr.insert(eqDiffArr.index(1) - 1, 0)\n",
    "    for n in eqDiffArr: # Creates an array of arrays of x, y, and z for each equipotential surface.\n",
    "        xVals.append([])\n",
    "        yVals.append([])\n",
    "        zVals.append([])\n",
    "        xVals2d.append([])\n",
    "        yVals2d.append([])\n",
    "        voltVals.append(\"problematic volt val index\")\n",
    "    for p in potVals: # Adds the coordinates for each point on each surface to the above arrays.\n",
    "        ind = p.eqLine\n",
    "        if neg:\n",
    "            ind += numSurfs\n",
    "        xVals[ind].append(p.x*(1e9*distOfUnit))\n",
    "        yVals[ind].append(p.y*(1e9*distOfUnit))\n",
    "        zVals[ind].append(p.z*(1e9*distOfUnit))\n",
    "        xVals2d[ind].append(p.x*(1e9*distOfUnit))\n",
    "        yVals2d[ind].append(p.y*(1e9*distOfUnit))\n",
    "        valStr = str(p.val)\n",
    "        voltVals[p.eqLine] = valStr[0:valStr.find(\".\")+4]\n",
    "\n",
    "    for n in range(0, len(xVals)): # Trims arrays.\n",
    "        if len(xVals[n]) != 0:\n",
    "            xValsP.append(xVals[n])\n",
    "            yValsP.append(yVals[n])\n",
    "            zValsP.append(zVals[n])\n",
    "    for n in range(0, len(xVals2d)):\n",
    "        if len(xVals2d[n]) != 0:\n",
    "            xValsP2d.append(xVals2d[n])\n",
    "            yValsP2d.append(yVals2d[n])\n",
    "\n",
    "    if saveYN: # Actual code for creating the save file.\n",
    "        with open(fileName, 'w') as f:\n",
    "            f.write(str(numSurfs) + \"\\n\")\n",
    "            if pos:\n",
    "                f.write(str(1) + \"\\n\")\n",
    "            else:\n",
    "                f.write(str(0) + \"\\n\")\n",
    "            if neg:\n",
    "                f.write(str(1) + \"\\n\")\n",
    "            else:\n",
    "                f.write(str(0) + \"\\n\")\n",
    "            f.write(str(numCharges) + \"\\n\")\n",
    "            for n in range(0, len(xValsP)):\n",
    "                for xyz in range(0, len(xValsP[n])):\n",
    "                    f.write(\"#\")\n",
    "                    ind = n\n",
    "                    if pos:\n",
    "                        ind += 1\n",
    "                    f.write(str(xValsP[n][xyz]) + \"x\")\n",
    "                    f.write(str(yValsP[n][xyz]) + \"y\")\n",
    "                    f.write(str(zValsP[n][xyz]) + \"z\")\n",
    "                    f.write(voltVals[ind] + \"v\")\n",
    "                    f.write(str(ind) + \"\\n\")\n",
    "\n",
    "# 3D DISTRIBUTION PLOTTING\n",
    "chgs = \" charge\"\n",
    "if numCharges > 1:\n",
    "    chgs += \"s\"\n",
    "title = \"\"\n",
    "if (saveYN or loadYN) and fileName != \"save.dat\":\n",
    "    title = fileName[0:fileName.find(\".\")]\n",
    "else:\n",
    "    title = str(numCharges) + chgs\n",
    "title = title.replace(\"_\", \" \")\n",
    "fig = plt.figure(\"Equipotential Surfaces - \" + title)\n",
    "ax = plt.axes(projection = '3d')\n",
    "for n in range(0, len(xValsP)): # Each iteration plots a new surface.\n",
    "    # COLOR GRADIENT DEFINITION\n",
    "    frac = float(n)/float(len(xValsP)) + 0.1\n",
    "    r = int(-127*math.cos(2*math.pi*frac)) + 127\n",
    "    g = int(-127*math.cos(math.pi*frac)) + 127\n",
    "    b = int(150*math.cos(1.75*(0.5*math.pi*frac + 0.25*math.pi))) + 150\n",
    "    c = rgbToHex(r, g, b)\n",
    "\n",
    "    # INDEX MANIPULATION\n",
    "    i = n\n",
    "    if neg and not pos:\n",
    "        i = len(xValsP) - 1 - n\n",
    "    elif (neg and pos) and n < numSurfs:\n",
    "        i = len(xValsP) - 1 - n - numSurfs\n",
    "    j = n\n",
    "    if pos:\n",
    "        j += 1\n",
    "    if float(voltVals[j]) < 0:\n",
    "        j = len(xValsP) - j - numSurfs\n",
    "        if neg and not pos:\n",
    "            j -= 1\n",
    "    ax.plot(xValsP[i], yValsP[i], zValsP[i], 'o', label = voltVals[j] + \"V\", color = c)\n",
    "plt.get_current_fig_manager().window.showMaximized()\n",
    "ax.legend()\n",
    "ax.tick_params(length = 10)\n",
    "set_axes_equal(ax)\n",
    "ax.set_title(title)\n",
    "ax.set_xlabel('nm')\n",
    "ax.set_ylabel('nm')\n",
    "ax.set_zlabel('nm')\n",
    "\n",
    "# 2D CROSS-SECTION PLOTTING - Separate from 3D because of the way Python handles plotting (i.e. it cannot manage two separate ones simultaneously)\n",
    "fig = plt.figure(\"Equipotential Surfaces - \" + title + \" (2D cross-section)\")\n",
    "ax2d = plt.axes()\n",
    "for n in range(0, len(xValsP2d)): # Each iteration plots a new line.\n",
    "    # COLOR GRADIENT DEFINITION\n",
    "    frac = float(n)/float(len(xValsP2d)) + 0.1\n",
    "    r = int(-127*math.cos(2*math.pi*frac)) + 127\n",
    "    g = int(-127*math.cos(math.pi*frac)) + 127\n",
    "    b = int(150*math.cos(1.75*(0.5*math.pi*frac + 0.25*math.pi))) + 150\n",
    "    c = rgbToHex(r, g, b)\n",
    "\n",
    "    # INDEX MANIPULATION\n",
    "    i = n\n",
    "    if neg and not pos:\n",
    "        i = len(xValsP2d) - 1 - n\n",
    "    elif (neg and pos) and n < numSurfs:\n",
    "        i = len(xValsP2d) - 1 - n - numSurfs\n",
    "    j = n\n",
    "    if pos:\n",
    "        j += 1\n",
    "    if float(voltVals[j]) < 0:\n",
    "        j = len(xValsP2d) - j - numSurfs\n",
    "        if neg and not pos:\n",
    "            j -= 1\n",
    "    ax2d.plot(xValsP2d[i], yValsP2d[i], 'o', label = voltVals[j] + \"V\", color = c)\n",
    "plt.get_current_fig_manager().window.showMaximized()\n",
    "ax2d.set_aspect('equal')\n",
    "ax2d.legend()\n",
    "ax2d.set_title(title)\n",
    "# plt.tight_layout()\n",
    "ax2d.set_xlabel('nm')\n",
    "ax2d.set_ylabel('nm')"
   ]
